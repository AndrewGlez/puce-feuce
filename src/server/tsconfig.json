{
  "files": ["./index.ts"],
  "include": ["./**/*.ts"],

  "compilerOptions": {
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowUnusedLabels": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2020",
    "strict": true
  }
}
